{% extends 'menu.html.twig' %}

{% block title %}Autorites
{% endblock %}

{% block body %}
	<h1 class="card-title card-padding pb-0">Autorités</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Code</th>
				<td>{{ autorite.codeAutorite }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ autorite.typeAutorite }}</td>
			</tr>
			<tr>
				<th>Numero d'immatriculation</th>
				<td>{{ autorite.numImmatriculation }}</td>
			</tr>
			<tr>
				<th>Forme autorisé nom</th>
				<td>{{ autorite.formeAutoNom }}</td>
			</tr>
			<tr>
				<th>Autre forme nom</th>
				<td>{{ autorite.autreFormeNom }}</td>
			</tr>
			<tr>
				<th>Zone geographique</th>
				<td>{{ autorite.zoneGeographique }}</td>
			</tr>
			<tr>
				<th>Creation</th>
				<td>{{ autorite.dateCreation ? autorite.dateCreation|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Destruction</th>
				<td>{{ autorite.dateDestruction ? autorite.dateDestruction|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Histoire</th>
				<td>{{ autorite.histoireAutorite }}</td>
			</tr>
			<tr>
				<th>Statut</th>
				<td>{{ autorite.statutJuridique }}</td>
			</tr>
			<tr>
				<th>Fonction/Activite</th>
				<td>{{ autorite.fonctionActivite }}</td>
			</tr>
			<tr>
				<th>Organisation interne</th>
				<td>{{ autorite.organisationInterne }}</td>
			</tr>
			<tr>
				<th>Type relation</th>
				<td>{{ autorite.typeRelation }}</td>
			</tr>
			<tr>
				<th>Description relation</th>
				<td>{{ autorite.descriptionRelation }}</td>
			</tr>
			<tr>
				<th>Debut relation</th>
				<td>{{ autorite.dateDebutRelation ? autorite.dateDebutRelation|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Fin relation</th>
				<td>{{ autorite.dateFinRelation ? autorite.dateFinRelation|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Code service description</th>
				<td>{{ autorite.codeServiceDescription }}</td>
			</tr>
			<tr>
				<th>Regle/Convention</th>
				<td>{{ autorite.regleConvention }}</td>
			</tr>
			<tr>
				<th>Statut</th>
				<td>{{ autorite.statutAutorite }}</td>
			</tr>
			<tr>
				<th>Niveau detail</th>
				<td>{{ autorite.niveauDetail }}</td>
			</tr>
			<tr>
				<th>Langue/Ecriture</th>
				<td>{{ autorite.langueEcriture }}</td>
			</tr>
			<tr>
				<th>Note entretien</th>
				<td>{{ autorite.noteEntretien }}</td>
			</tr>
			<tr>
				<th>Nature relation</th>
				<td>{{ autorite.natureRelation }}</td>
			</tr>
		</tbody>
	</table>

	<div class="template-demo">
		<a href="{{ path('autorites_index') }}">
			<img src="{{ asset('../../assets/images/back.png') }}" alt="user" height="30px"/>
		</a>
		<a href="{{ path('autorites_edit', {'id': autorite.id}) }}" class="mdc-button mdc-button--outlined outlined-button--info mdc-ripple-upgraded">
			<i class="material-icons mdc-button__icon">edit</i>
			Modifier
		</a>
	</div>
	{{ include('autorites/_delete_form.html.twig') }}
{% endblock %}
