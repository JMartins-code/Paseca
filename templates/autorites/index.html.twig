{% extends 'menu.html.twig' %}

{% block title %}Autorites
{% endblock %}

{% block body %}
	<h1 class="card-title card-padding pb-0">Liste autorités</h1>
	<div class="table table-responsive">
		<table class="table table-hoverable">
			<thead>
				<tr>
					<th>Code</th>
					<th>Type</th>
					<th>Numero d'immatriculation</th>
					<th>Forme autorisée du nom</th>
					<th>Création</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for autorite in autorites %}
					<tr>
						<td>{{ autorite.codeAutorite }}</td>
						<td>{{ autorite.typeAutorite }}</td>
						<td>{{ autorite.numImmatriculation }}</td>
						<td>{{ autorite.formeAutoNom }}</td>
						<td>{{ autorite.dateCreation ? autorite.dateCreation|date('Y-m-d') : '' }}</td>
						<td>
							<a href="{{ path('autorites_show', {'id': autorite.id}) }}" class="mdc-button mdc-button--raised icon-button filled-button--info">
								<i class="material-icons mdc-button__icon">visibility</i>
							</a>

							<a href="{{ path('autorites_edit', {'id': autorite.id}) }}" class="mdc-button mdc-button--raised icon-button filled-button--success">
								<i class="material-icons mdc-button__icon">colorize</i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="10">
							<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-2 text-muted tx-14">
								Acune autorités trouvées
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="menu-button-container">
		<a href="{{ path('autorites_new') }}" class="mdc-button mdc-menu-button mdc-button--raised icon-button shaped-button secondary-filled-button">
			<i class="material-icons mdc-button__icon">add</i>
		</a>
	</div>
{% endblock %}
