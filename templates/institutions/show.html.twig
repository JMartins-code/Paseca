{% extends 'menu.html.twig' %}

{% block title %}Institutions
{% endblock %}

{% block body %}
	<h1 class="card-title card-padding pb-0">Institutions</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Code</th>
				<td>{{ institution.codeInstitution }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ institution.nomInstitution }}</td>
			</tr>
			<tr>
				<th>TypeInstitution</th>
				<td>{{ institution.typeInstitution }}</td>
			</tr>
			<tr>
				<th>Contact responsable</th>
				<td>{{ institution.contactResponsable }}</td>
			</tr>
			<tr>
				<th>Nom responsable</th>
				<td>{{ institution.nomResponsable }}</td>
			</tr>
			<tr>
				<th>Histoire</th>
				<td>{{ institution.histoireInstitution }}</td>
			</tr>
			<tr>
				<th>Context</th>
				<td>{{ institution.contextInstitution }}</td>
			</tr>
			<tr>
				<th>Textes de reference</th>
				<td>{{ institution.textReference }}</td>
			</tr>
			<tr>
				<th>Structure</th>
				<td>{{ institution.structureInstitution }}</td>
			</tr>
			<tr>
				<th>Gestion archive</th>
				<td>{{ institution.gestionArchive }}</td>
			</tr>
			<tr>
				<th>Batiment</th>
				<td>{{ institution.batimentInstitution }}</td>
			</tr>
			<tr>
				<th>Fond des archives</th>
				<td>{{ institution.fondArchive }}</td>
			</tr>
			<tr>
				<th>Instrument de recherche</th>
				<td>{{ institution.instrumentRecherche }}</td>
			</tr>
			<tr>
				<th>Heure ouverture</th>
				<td>{{ institution.heureOuverture ? institution.heureOuverture|date('H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Condition acces</th>
				<td>{{ institution.conditionAcces }}</td>
			</tr>
			<tr>
				<th>Accessibilite</th>
				<td>{{ institution.accessibiliteInstitution }}</td>
			</tr>
			<tr>
				<th>Service d'aide</th>
				<td>{{ institution.serviceAide }}</td>
			</tr>
			<tr>
				<th>Serveice de reproduction</th>
				<td>{{ institution.serveiceReproduction }}</td>
			</tr>
			<tr>
				<th>Espace public</th>
				<td>{{ institution.espacePublic }}</td>
			</tr>
			<tr>
				<th>Id service description</th>
				<td>{{ institution.idServiceDescription }}</td>
			</tr>
			<tr>
				<th>Regle/Convention</th>
				<td>{{ institution.regleConvention }}</td>
			</tr>
			<tr>
				<th>Niveau elaboration</th>
				<td>{{ institution.niveauElaboration }}</td>
			</tr>
			<tr>
				<th>Niveau detail</th>
				<td>{{ institution.niveauDetail }}</td>
			</tr>
			<tr>
				<th>Creation</th>
				<td>{{ institution.dateCreation ? institution.dateCreation|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Destruction</th>
				<td>{{ institution.dateDestruction ? institution.dateDestruction|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Langue/Ecriture</th>
				<td>{{ institution.langueEcriture }}</td>
			</tr>
			<tr>
				<th>Source</th>
				<td>{{ institution.sourceInstitution }}</td>
			</tr>
			<tr>
				<th>Note MAJ</th>
				<td>{{ institution.noteMAJ }}</td>
			</tr>
		</tbody>
	</table>

	<div class="template-demo">
		<a href="{{ path('institutions_index') }}">
			<img src="{{ asset('../../assets/images/back.png') }}" alt="user" height="30px"/>
		</a>
		<a href="{{ path('institutions_edit', {'id': institution.id}) }}" class="mdc-button mdc-button--outlined outlined-button--info mdc-ripple-upgraded">
			<i class="material-icons mdc-button__icon">edit</i>
			Modifier
		</a>
	</div>
	{{ include('institutions/_delete_form.html.twig') }}
{% endblock %}
