{% extends 'menu.html.twig' %}

{% block title %}Institutions
{% endblock %}

{% block body %}
	<h1 class="card-title">Liste des institutions</h1>
	<div class="table table-responsive">
		<table class="table table-hoverables">
			<thead>
				<tr>
					<th>Code</th>
					<th>Nom</th>
					<th>Type</th>
					<th>Nom responsable</th>
					<th>Contact responsable</th>
					<th>Création</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for institution in institutions %}
					<tr>
						<td>{{ institution.codeInstitution }}</td>
						<td>{{ institution.nomInstitution }}</td>
						<td>{{ institution.typeInstitution }}</td>
						<td>{{ institution.nomResponsable }}</td>
						<td>{{ institution.contactResponsable }}</td>
						<td>{{ institution.dateCreation ? institution.dateCreation|date('Y-m-d') : '' }}</td>
						<td>
							<a href="{{ path('institutions_show', {'id': institution.id}) }}" class="mdc-button mdc-button--raised icon-button filled-button--info">
								<i class="material-icons mdc-button__icon">visibility</i>
							</a>

							<a href="{{ path('institutions_edit', {'id': institution.id}) }}" class="mdc-button mdc-button--raised icon-button filled-button--success">
								<i class="material-icons mdc-button__icon">colorize</i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="10">
							<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-2 text-muted tx-14">
								Aucune institution trouvées
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<div class="menu-button-container">
		<a href="{{ path('institutions_new') }}" class="mdc-button mdc-menu-button mdc-button--raised icon-button shaped-button secondary-filled-button">
			<i class="material-icons mdc-button__icon">add</i>
		</a>
	</div>
{% endblock %}
