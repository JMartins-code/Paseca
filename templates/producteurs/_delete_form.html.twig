<form method="post" action="{{ path('producteurs_delete', {'id': producteur.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce producteur ?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producteur.id) }}">
	<button class="mdc-button mdc-button--raised filled-button--secondary">Suppimer</button>
</form>
