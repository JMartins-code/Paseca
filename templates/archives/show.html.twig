{% extends 'menu.html.twig' %}

{% block title %}Archives
{% endblock %}

{% block body %}
	<h1 class="card-title card-padding pb-0">Archives</h1>
	<table class="table">
		<tbody>
			<tr>
				<th style="text-align : left">Numéro d'ordre</th>
				<td>{{ archive.numOrdre }}</td>
			</tr>
			<tr>
				<th style="text-align : left">Typologie documentaire</th>
				<td>{{ archive.typologieDocumentaire }}</td>
			</tr>
			<tr>
				<th style="text-align : left">Statut</th>
				<td>{{ archive.statutArchive }}</td>
			</tr>
			<tr>
				<th style="text-align:left">Paraphe</th>
				<td>{{ archive.paraphe }}</td>
			</tr>
			<tr>
				<th style="text-align : left">Cote</th>
				<td>{{ archive.cote }}</td>
			</tr>
			<tr>
				<th style="text-align : left">Nbre d'exemplaire</th>
				<td>{{ archive.nbreExemplaire }}</td>
			</tr>
			<tr>
				<td style="text-align:left">Date de mise à disposition</td>
				<td>{{ archive.dateDisposition ? archive.dateDisposition|date('Y-m-d') : '' }}</td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
			</tr>

		</tbody>
	</table>

	<div class="template-demo">
		{% if is_granted('ROLE_PRODU') %}

			<a href="{{ path('archives_index') }}">
				<img src="{{ asset('../../assets/images/back.png') }}" alt="retour" height="30px"/>
			</a>
			<a href="{{ path('archives_edit', {'id': archive.id}) }}">
				<i class="material-icons mdc-button__icon">edit</i>
				<!--<img src="{{ asset('../../assets/images/modifier.png') }}" alt="modifier" height="30px"/>!-->
			</a>
		{% endif %}

		{% if is_granted('ROLE_ADMIN') %}
			{{ include('archives/_delete_form.html.twig') }}
		{% endif %}
	</div>
</div>{% endblock %}
