  <button class="mdc-button mdc-button--outlined outlined-button--secondary mdc-ripple-upgraded">
    <!--<i class="material-icons mdc-button__icon">delete</i> Supprimer!-->
    <img src="{{ asset('../../assets/images/delete.png') }}" alt="user" height="30px"/>
  </button>

</form>
