{% extends 'menu.html.twig' %}

{% block title %}Modifier Utilisateur
{% endblock %}

{% block body %}
	<h1 class="card-title card-padding pb-0">Modifier Utilisateur</h1>

	{{ form_start(form) }}
	<div class="template-demo">
		<div class="mdc-layout-grid__inner">
			<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">
				<div class="mdc-text-field mdc-text-field--outlined">
					{{ form_widget(form.nom, {'attr': {'class': "mdc-text-field__input", 'id': "text-field-hero-input"}}
					) }}
					<div class="mdc-notched-outline">
						<div class="mdc-notched-outline__leading"></div>
						<div class="mdc-notched-outline__notch">
							<label for="text-field-hero-input" class="mdc-floating-label">Nom</label>
						</div>
						<div class="mdc-notched-outline__trailing"></div>
					</div>
				</div>
			</div>
			<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">
				<div class="mdc-text-field mdc-text-field--outlined">
					{{ form_widget(form.prenom, {'attr': {'class': "mdc-text-field__input", 'id': "text-field-hero-input"}}) }}
					<div class="mdc-notched-outline">
						<div class="mdc-notched-outline__leading"></div>
						<div class="mdc-notched-outline__notch">
							<label for="text-field-hero-input" class="mdc-floating-label">Prénom</label>
						</div>
						<div class="mdc-notched-outline__trailing"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="mdc-layout-grid__inner">
			<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">
				<div class="mdc-text-field mdc-text-field--outlined">
					{{ form_widget(form.dateNaissance, {'attr': {'class': "mdc-text-field__input", 'id': "text-field-hero-input"}}) }}
					<div class="mdc-notched-outline">
						<div class="mdc-notched-outline__leading"></div>
						<div class="mdc-notched-outline__notch">
							<label for="text-field-hero-input" class="mdc-floating-label">Date de naissance</label>
						</div>
						<div class="mdc-notched-outline__trailing"></div>
					</div>
				</div>
			</div>
			<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">
				<div class="mdc-text-field mdc-text-field--outlined">
					{{ form_widget(form.lieuNaissance, {'attr': {'class': "mdc-text-field__input", 'id': "text-field-hero-input"}}) }}
					<div class="mdc-notched-outline">
						<div class="mdc-notched-outline__leading"></div>
						<div class="mdc-notched-outline__notch">
							<label for="text-field-hero-input" class="mdc-floating-label">Lieu de naissance</label>
						</div>
						<div class="mdc-notched-outline__trailing"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="mdc-layout-grid__inner">
			<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">
				<div class="mdc-text-field mdc-text-field--outlined">
					{{ form_widget(form.numTelephone, {'attr': {'class': "mdc-text-field__input", 'id': "text-field-hero-input"}}) }}
					<div class="mdc-notched-outline">
						<div class="mdc-notched-outline__leading"></div>
						<div class="mdc-notched-outline__notch">
							<label for="text-field-hero-input" class="mdc-floating-label">Numéro telephone</label>
						</div>
						<div class="mdc-notched-outline__trailing"></div>
					</div>
				</div>
			</div>
			<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">
				<div class="mdc-text-field mdc-text-field--outlined">
					{% if is_granted('ROLE_ADMIN') %}
						{{ form_widget(form.roles, {'attr': {'class': "mdc-text-field__input", 'id': "text-field-hero-input"}}) }}
					{% else %}
						{{ form_widget(form.roles, {'attr': {'class': "mdc-text-field__input", 'id': "text-field-hero-input", 'readonly':"true"}}) }}
					{% endif %}
					
					<div class="mdc-notched-outline">
						<div class="mdc-notched-outline__leading"></div>
						<div class="mdc-notched-outline__notch">
							<label for="text-field-hero-input" class="mdc-floating-label">Profils</label>
						</div>
						<div class="mdc-notched-outline__trailing"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="mdc-layout-grid__inner">
			<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">
				<div class="mdc-text-field mdc-text-field--outlined">
					{% if is_granted('ROLE_ADMIN') %}
						{{ form_widget(form.email, {'attr': {'class': "mdc-text-field__input", 'id': "text-field-hero-input"}}) }}
					{% else %}
						{{ form_widget(form.email, {'attr': {'class': "mdc-text-field__input", 'id': "text-field-hero-input", 'readonly':"true"}}) }}
					{% endif %}
					
					<div class="mdc-notched-outline">
						<div class="mdc-notched-outline__leading"></div>
						<div class="mdc-notched-outline__notch">
							<label for="text-field-hero-input" class="mdc-floating-label">Email</label>
						</div>
						<div class="mdc-notched-outline__trailing"></div>
					</div>
				</div>
			</div>
			<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">
				<div class="mdc-text-field mdc-text-field--outlined">
					{{ form_widget(form.plainPassword, {'attr': {'class': "mdc-text-field__input", 'id': "text-field-hero-input"}}) }}
					<div class="mdc-notched-outline">
						<div class="mdc-notched-outline__leading"></div>
						<div class="mdc-notched-outline__notch">
							<label for="text-field-hero-input" class="mdc-floating-label">Mot de passe</label>
						</div>
						<div class="mdc-notched-outline__trailing"></div>
					</div>
				</div>
			</div>
		</div>
		{#{ form_row(form.agreeTerms, { label: 'Conditions de confidentalités'}) }#}

		<p>
			<div class="text-right">
				<button class="mdc-button mdc-button--raised filled-button--success">{{ button_label|default('Soumettre') }}</button>
			</div>
		</p>
	</div>
	{{ form_end(form) }}
	<div class="menu-button-container">
		<a href="{{ path('utilisateurs_index') }}">
			<img src="{{ asset('../../assets/images/back.png') }}" alt="user" height="30px"/>
		</a>
	</div>
{% endblock %}
