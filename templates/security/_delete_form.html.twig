<form method="post" action="{{ path('utilisateurs_delete', {'id': utilisateur.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce utilisateur ?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
	<button class="mdc-button mdc-button--raised filled-button--secondary">Suppimer</button>
</form>
