{% extends 'menu.html.twig' %}

{% block title %}utilisateurs
{% endblock %}

{% block body %}
	<h1 class="card-title card-padding pb-0">utilisateurs</h1>

	<table class="table">
		<tbody>
			<tr>
				<th class="text-left">Noms</th>
				<td>{{ utilisateur.nom }}</td>
			</tr>
			<tr>
				<th class="text-left">Prénoms</th>
				<td>{{ utilisateur.prenom }}</td>
			</tr>
			<tr>
				<th class="text-left">Date de naissance</th>
				<td>{{ utilisateur.dateNaissance ? utilisateur.dateNaissance|date('d-m-Y') : '' }}</td>
			</tr>
			<tr>
				<th class="text-left">Lieu de naissance</th>
				<td>{{ utilisateur.lieuNaissance }}</td>
			</tr>
			<tr>
				<th class="text-left">Numéro de téléphone</th>
				<td>{{ utilisateur.numTelephone }}</td>
			</tr>
			<tr>
				<th class="text-left">Email</th>
				<td>{{ utilisateur.email }}</td>
			</tr>
		</tbody>
	</table>

	<div class="template-demo">
		<a href="{{ path('utilisateurs_index') }}">
			<img src="{{ asset('../../assets/images/back.png') }}" alt="user" height="30px"/>
		</a>
		<a href="{{ path('modifier_profil', {'id': utilisateur.id}) }}" class="mdc-button mdc-button--outlined outlined-button--info mdc-ripple-upgraded">
			<i class="material-icons mdc-button__icon">edit</i>
			Modifier
		</a>
	</div>
	{{ include('security/_delete_form.html.twig') }}
{% endblock %}
