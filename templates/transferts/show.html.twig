{% extends 'menu.html.twig' %}

{% block title %}Transferts
{% endblock %}

{% block body %}
	<h1 class="card-title card-padding pb-0">Transferts</h1>
	<table class="table">
		<tbody>
			<tr>
				<th>Numero exemplaire</th>
				<td>{{ transfert.numExemplaire }}</td>
			</tr>
			<tr>
				<th>Periode enregistrement</th>
				<td>{{ transfert.periodeEnregistrement ? transfert.periodeEnregistrement|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Nbre fait enregistr√©s</th>
				<td>{{ transfert.nbreFaitEnregistrement }}</td>
			</tr>
			<tr>
				<th>Observations</th>
				<td>{{ transfert.observationsTransfert }}</td>
			</tr>
			<tr>
				<th>Ouverture</th>
				<td>{{ transfert.dateOuvertureRegistre ? transfert.dateOuvertureRegistre|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Fermeture</th>
				<td>{{ transfert.dateFermeture ? transfert.dateFermeture|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Code plan de classement</th>
				<td>{{ transfert.codePlanClasse }}</td>
			</tr>
			<tr>
				<th>Regle/Gestion</th>
				<td>{{ transfert.codeRegleGestion }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ transfert.dateTransfert ? transfert.dateTransfert|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Responsable</th>
				<td>{{ transfert.responsableTransfert }}</td>
			</tr>
			<tr>
				<th>Format</th>
				<td>{{ transfert.formatArchive }}</td>
			</tr>
			<tr>
				<th>Support</th>
				<td>{{ transfert.supportArchive }}</td>
			</tr>
			<tr>
				<th>Noms officiers signataires</th>
				<td>{{ transfert.nomOfficierSignataire }}</td>
			</tr>
		</tbody>
	</table>

	<div class="template-demo">
		<a href="{{ path('transferts_index') }}">
			<img src="{{ asset('../../assets/images/back.png') }}" alt="user" height="30px"/>
		</a>
		<a href="{{ path('transferts_edit', {'id': transfert.id}) }}" class="mdc-button mdc-button--outlined outlined-button--info mdc-ripple-upgraded">
			<i class="material-icons mdc-button__icon">edit</i>
			Modifier
		</a>
	</div>
	{{ include('transferts/_delete_form.html.twig') }}
{% endblock %}
