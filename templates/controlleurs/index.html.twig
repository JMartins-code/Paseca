{% extends 'menu.html.twig' %}

{% block title %}Controleurs
{% endblock %}

{% block body %}
	<h1 class="card-title card-padding pb-0">Liste controleurs</h1>
	<div class="table-responsive">
		<table class="table table-hoverable">
			<thead>
				<tr>
					<th>Code</th>
					<th>Nom utilisateur</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for controlleur in controlleurs %}
					<tr>
						<td>{{ controlleur.codeControlleur }}</td>
						<td>{{ controlleur.codeUtilisateur.nom }}</td>
						<td>
							<a href="{{ path('controlleurs_show', {'id': controlleur.id}) }}" class="mdc-button mdc-button--raised icon-button filled-button--info">
								<i class="material-icons mdc-button__icon">visibility</i>
							</a>

							<a href="{{ path('controlleurs_edit', {'id': controlleur.id}) }}" class="mdc-button mdc-button--raised icon-button filled-button--success">
								<i class="material-icons mdc-button__icon">colorize</i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucun controlleur trouv√©s</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="menu-button-container">
		<a href="{{ path('controlleurs_new') }}" class="mdc-button mdc-menu-button mdc-button--raised icon-button shaped-button secondary-filled-button">
			<i class="material-icons mdc-button__icon">add</i>
		</a>
	</div>
{% endblock %}
